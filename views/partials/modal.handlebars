{{!-- Modal/COMMENT --}}
<div class="modal animated tada" id="{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
    <div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header text-center">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title w-100 font-weight-bold">{{this.title}}</h4>
        </div>
        <div class="modal-body mx-3">
            {{#if this.notes}}
                {{#each this.notes}}
                    <div class="row">
                        <div class="col-md-10">
                            <p>{{this.text}}</p>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <div>
                    <p>No comments</p>
                </div>
            {{/if}}

            <div class="modal-footer d-flex justify-content-center">
                <div class="row">
                    <div class="col-md-8">
                        <form action="/api/comments/{{this._id}}" method="POST">
                        <input placeholder="Add a new comment" type="text" class="form-control" id="comment-text" name="comment-text">
                        <button type="submit" class="btn btn-primary">Add Comment</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>
