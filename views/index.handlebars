<div>
    <h1 class="index-subheading">Get the Latest News</h1>
    <div class="row">
        <div class="col-md-12"></div>
        <a class="btn btn-primary" id="scrape-btn" href="/api/articles/scrape">Scrape New Articles</a>
    </div>
</div>

<div id="news-articles">
    <div class="row">
        <div class="col-md-12">
            {{#if articles}}
                {{#each articles}}
                <div class="card card-cascade wider">
                    <div class="view view-cascade gradient-card-header peach-gradient">
                        {{!-- Title --}}
                        <h2 class="card-header-title mb-3">{{this.title}}</h2>
                        {{!-- Date Created --}}
                        <p class="mb-0"><i class="fas fa-calendar mr-2"></i>{{this.createdAt}}</p>
                    </div>
                    <div class="card-body card-body-cascade text-center">
                        {{!-- Text Summary --}}
                        <p class="card-text">
                            {{summary}}
                        </p>
                        {{!-- Read More LINK --}}
                        <a href="{{this.link}}" target="_blank" class="orange-text d-flex flex-row-reverse p-2"
                            id="read-moreBtn">
                            <h5 class="waves-effect waves-light">Read more<i class="fas fa-angle-double-right ml-2"></i>
                            </h5>
                        </a>
                    </div>
                    <div class="card-footer">
                        {{!-- Add Comment BTN --}}
                        {{!-- <a class="btn btn-warning comment-btn" href="/comment/{{this._id}}">Add Comment</a> --}}
                        <a class="btn btn-warning comment-btn" href="#" data-toggle="modal" data-target="#{{this._id}}">Add
                            Comment</a>
                        {{!-- Save Article BTN --}}
                        <form action="/api/articles/save/{{this._id}}" method="POST">
                            <button type="submit" class="btn btn-success save-btn">Save Article</button>
                        </form>
                    </div>
                </div>
        </div>
    </div>
{{>modal}}
</div>

                {{/each}}
            {{else}}
                <div class="null">
                    <h4>There are no saved articles.</h4>
                </div>
            {{/if}}