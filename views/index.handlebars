{{#if article}}
    {{#each article}}
        <div class="row">
            <div class="col-lg-12">
                <div class="card-body">
                    <h2 class="card-title">{{title}}</h2>
                    <img class="card-img-top" src="{{image}}" alt="no image">
                    <p class="card-body">
                        {{summary}}
                    </p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-sm note-btn" href="/note/{{_id}}">Add Note</a>
                    <button type="button" class="btn btn-sm delete-btn" id="{{_id}}">Remove Article</button>
                </div>
            </div>
        </div>
    {{/each}}
    {{else}}
        <div>
            <h3>No articles</h3>
        </div>